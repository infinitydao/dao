#!/bin/sh
dir="$0"
exname=@PROJECT_NAME@ #application name
name=`basename "$dir"`
exdir=`which "$dir" 2>/dev/null`
if [ -z "$dir" ]
then
	exdir=`dirname "$dir"`
	if [ `echo "$dir" | head -c 1` != '/' ]
	then
		exdir=`pwd`/$dir
	fi
else
	exdir=`dirname "$exdir"`
fi

if [ -n "$LD_LIBRARY_PATH" ]
then
	LD_LIBRARY_PATH=$exdir:$LD_LIBRARY_PATH
else
	LD_LIBRARY_PATH=$exdir
fi
export LD_LIBRARY_PATH

cd $exdir
./$exname $*
