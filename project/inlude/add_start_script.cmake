function(add_start_script)
	get_target_property(TARGET_TYPE ${PROJECT_NAME} TYPE)
    if(${TARGET_TYPE} STREQUAL EXECUTABLE)
		foreach(SUB_FOLDER ${SUB_FOLDERS})
			if(${CMAKE_SYSTEM_NAME} STREQUAL Windows)
				set(CURRENT_BAT_PATH CURRENT_BAT_PATH-NOTFOUND)
				find_file(CURRENT_BAT_PATH start_${PROJECT_NAME}.bat PATHS ${EXECUTABLE_DIR}/${SUB_FOLDER} NO_DEFAULT_PATH)
				if(${CURRENT_BAT_PATH} STREQUAL CURRENT_BAT_PATH-NOTFOUND)
					if(DEFINED LOG_DISABLE AND LOG_DISABLE STREQUAL YES)
						set(LOG_ENABLE "")
					else(DEFINED LOG_DISABLE AND LOG_DISABLE STREQUAL YES)
						set(LOG_ENABLE ">log.txt")
					endif(DEFINED LOG_DISABLE AND LOG_DISABLE STREQUAL YES)
					if(NOT DEFINED COMMAND_LINE_ARGUMENT)
						set(COMMAND_LINE_ARGUMENT "")
					endif(NOT DEFINED COMMAND_LINE_ARGUMENT)
					configure_file(${ROOT_PATH}/project/templates/start.bat.in ${EXECUTABLE_DIR}/${SUB_FOLDER}/start_${PROJECT_NAME}.bat @ONLY)
				endif(${CURRENT_BAT_PATH} STREQUAL CURRENT_BAT_PATH-NOTFOUND)
			else(${CMAKE_SYSTEM_NAME} STREQUAL Windows)
				set(CURRENT_BAT_PATH CURRENT_BAT_PATH-NOTFOUND)
				find_file(CURRENT_BAT_PATH start_${PROJECT_NAME}.sh PATHS ${EXECUTABLE_DIR}/${SUB_FOLDER} NO_DEFAULT_PATH)
				if(${CURRENT_BAT_PATH} STREQUAL CURRENT_BAT_PATH-NOTFOUND)
					configure_file(${ROOT_PATH}/project/templates/start.sh.in ${EXECUTABLE_DIR}/${SUB_FOLDER}/start_${PROJECT_NAME}.sh @ONLY NEWLINE_STYLE UNIX)
				endif(${CURRENT_BAT_PATH} STREQUAL CURRENT_BAT_PATH-NOTFOUND)
			endif(${CMAKE_SYSTEM_NAME} STREQUAL Windows)
		endforeach(SUB_FOLDER ${SUB_FOLDERS})
    endif(${TARGET_TYPE} STREQUAL EXECUTABLE)
endfunction(add_start_script)